{
  "root": true,
  "plugins": [
    "react"
  ],
  "parser": "babel-eslint",
  "ecmaFeatures": {
    "blockBindings": true,
    "forOf": true,
    "jsx": true
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "document": true,
    "require": true,
    "window": true,
    "__DEV__": true,
    "__STAGING__": true,
    "__PRODUCTION__": true,
    "__CURRENT_ENV__": true
  },
  "rules": {
    "no-new": 0,
    "no-underscore-dangle": 0,
    "quotes": [2, "single", "avoid-escape"],
    "dot-notation": 0,
    "strict": [2, "global"],
    "no-process-exit": 0,
    "new-cap": [2, {
      "capIsNewExceptions": ["PluginError"]
    }],
    "no-unused-vars": [2, {
      "ignore": ["React"]
    }],
    "react/jsx-uses-vars": 1,
    "react/jsx-uses-react": 1
  }
}

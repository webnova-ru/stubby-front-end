/**
 * -----------------------------------------
 * normalize
 * -----------------------------------------
 */

// local variables
$ieSupport = $G.support-for-ie

// styles
article,
aside,
details,
figcaption,
figure,
footer,
header,
hgroup,
main,
nav,
section,
summary
  display: block

audio,
canvas,
video
  display: inline-block
  if $ieSupport
    *display: inline
    *zoom: 1

audio:not([controls])
  display: none
  height: 0

[hidden]
  display: none

html
  font-family: sans-serif
  -webkit-text-size-adjust: 100%
  -ms-text-size-adjust: 100%
  font-size: 100%

if $ieSupport
  button,
  input,
  select,
  textarea
    font-family: sans-serif

body
  margin: 0

a:focus
  outline: thin dotted

a:active,
a:hover
  outline: 0

p,
pre
  margin: 1em 0

blockquote
  margin: 1em 40px

h1
  font-size: 2em
  margin: 0.67em 0

h2
  font-size: 1.5em
  margin: 0.83em 0

h3
  font-size: 1.17em
  margin: 1em 0

h4
  font-size: 1em
  margin: 1.33em 0

h5
  font-size: 0.83em
  margin: 1.67em 0

h6
  font-size: 0.67em
  margin: 2.33em 0

abbr[title]
  border-bottom: 1px dotted

b, strong
  font-weight: bold

dfn
  font-style: italic

hr
  height: 0
  box-sizing: content-box

mark
  background: #ff0
  color: #000

code,
kbd,
pre,
samp
  font-family: monospace, serif
  font-size: 1em
  if $ieSupport
    _font-family: 'courier new', monospace

pre
  white-space: pre-wrap

q
  quotes: '\201C' '\201D' '\2018' '\2019'

small
  font-size: 80%

sub,
sup
  position: relative
  vertical-align: baseline
  font-size: 75%
  line-height: 0

sup
  top: -0.5em

sub
  bottom: -0.25em

dl,
menu,
ol,
ul
  margin: 1em 0
  padding: 0 0 0 40px

dl
  padding: 0

dd
  margin: 0 0 0 40px

if $ieSupport
  nav
    ul,
    ol
      list-style: none

img
  border: 0
  -ms-interpolation-mode: bicubic if $G.support-for-ie

svg:not(:root)
  overflow: hidden

figure
  margin: 0

if $ieSupport
  form
    margin: 0

fieldset
  margin: 0 2px
  border: 1px solid #c0c0c0
  padding: 0.35em 0.625em 0.75em

legend
  padding: 0
  border: 0
  if $ieSupport
    *margin-left: -7px

button,
input,
select,
textarea
  margin: 0
  vertical-align: baseline
  font-size: 100%
  font-family: inherit
  if $ieSupport
    *vertical-align: middle

button,
input
  line-height: normal

button,
select
  text-transform: none

button,
html input[type='button'],
input[type='reset'],
input[type='submit']
  -webkit-appearance: button
  cursor: pointer
  if $ieSupport
    *overflow: visible

button[disabled],
html input[disabled]
  cursor: default

input[type='checkbox'],
input[type='radio']
  box-sizing: border-box
  padding: 0
  if $ieSupport
    *height: 13px
    *width: 13px

input[type='search']
  -webkit-appearance: textfield
  box-sizing: content-box

input[type='search']::-webkit-search-cancel-button,
input[type='search']::-webkit-search-decoration
  -webkit-appearance: none

button::-moz-focus-inner,
input::-moz-focus-inner
  padding: 0
  border: 0

textarea
  overflow: auto
  vertical-align: top

table
  border-spacing: 0
  border-collapse: collapse
